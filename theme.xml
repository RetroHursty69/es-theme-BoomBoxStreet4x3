<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>0.0 0.0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.31 0.31</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
		<logoAlignment>right</logoAlignment> 
         <zIndex>7</zIndex>			
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>   
      <text name="systemInfo">     
         <pos>-0.17 0.937</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/DonGraffiti.otf</fontPath>
	     <fontSize>0.05</fontSize>
         <zIndex>10</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Motorstrike-7d0V.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>1.26 0.96</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  
  
   <view name="basic,detailed,video">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Motorstrike-7d0V.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>1.15 0.96</pos>      
         <textColor>b3d9ff</textColor>
         <iconColor>b3d9ff</iconColor>
      </helpsystem>
   </view> 
  
<!--
System Gamelist
--> 

   <view name="detailed,video,basic">
      <textlist name="gamelist">
         <zIndex>6</zIndex>	      
         <selectorColor>1c1c1c00</selectorColor> 
	     <selectedColor>4fc107</selectedColor>     
         <pos>0.555 0.01</pos>
         <size>0.415 0.98</size>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/ProtestPaintBB.ttf</fontPath>
         <fontSize>0.045</fontSize>
		 <lineSpacing>0.9</lineSpacing>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>right</alignment>      
      </textlist>
   </view> 
  
  
    
